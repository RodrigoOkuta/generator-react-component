{
  "name": "generator-react-class-component",
  "version": "0.0.0",
  "description": "Generate a React class component (class extends React.Component) and a Jest test alongside",
  "homepage": "",
  "author": {
    "name": "Tamara Temple",
    "email": "tamouse@gmail.com",
    "url": "https://github.com/tamouse"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "react",
    "class",
    "component",
    "jest",
    "yeoman-generator"
  ],
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "lint-staged": "^4.3.0",
    "nsp": "^2.8.1",
    "prettier": "^1.14.2",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "yeoman-generator": "^1.0.0",
    "yosay": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "pretty": "prettier --write '{generators,__tests__}/**/*.js'",
    "linter": "eslint generators --fix",
    "pretest": "npm run pretty && npm run linter",
    "precommit": "lint-staged",
    "test": "jest",
    "jestwatch": "jest --watch"
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "npm run linter",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "tamouse/generator-react-class-component",
  "license": "MIT"
}
